&probin_common
 
 dim_in = 3                     ! problem dimension
 plot_int = 100000                ! plot interval
 max_grid_size(1:3) = 8 8 8  ! individual box size 

 ! Grid size
 prob_lo(1:3) = 0  0  0
 prob_hi(1:3) = 32 32 32        ! physical systemsize = (prob_lo-prob_hi)
 n_cells(1:3) = 32 32 32        ! to set dx = systemsize/n_cells

 ! allowable options for this example are
 ! -1 = PERIODIC
 bc_lo(1:3) = -1 -1 -1
 bc_hi(1:3) = -1 -1 -1
 
/

&probin_multispecies
 
 nspecies = 3                   ! number of species
 max_step = 600                   ! total number of computational step
 cfl1     = 0.01                ! CFL number
 chi      = 1.0                 ! max eigenvalue of diffusionmatrix Dbar_bc 
 Temp     = 1.0                 ! Temperature
 Press    = 1.0                 ! Pressure
 fraction_tolerance = 1e-13     ! to prevent division by zero
 start_time  = 1.0              ! start at t=1 to avoid NAN coming from rho_exact at t=0
 !include_temp = .false.        ! right now no temperature equation
 init_type = 5                  ! initprob:1=bubble,2=constgrad,3=gaussian,4=2specie-mansol,5=3specie-mansol 
 inverse_type = 1               ! LAPACK inverse type: 1=inverse, 2=pseudo inverse 
 timeinteg_type = 1             ! integrator type: 1=Euler,2=predictor-corrector,3=midpoint,4=3rdorder Runge-Kutta 
 print_error_norms = .true.     ! check L1/L2/Linf norm 
 is_ideal_mixture  = .true.     ! false=Bdag*Gama, true=Bdag 
 use_lapack  = .true.           ! false=iterative methods, true=inverse/pseudoinverse
 rho_in(1,1:3) = 0.6 1.05 0.9   ! initial concentrations 
 molmass_in(1:3) = 1.1 0.5 0.5  ! molar mass of n-species
 Dbar_in(1:3) = 1.5 1.5 0.5     ! SM diffusion constant arranged in lower-triangle
 
/
