&probin_common
 
 dim_in = 2                       ! problem dimension
 plot_int = 10                  ! plot interval
 max_step = 10                   ! total number of computational step
 max_grid_size(1:2) = 16 16       ! individual box size 
 n_steps_skip = 50              ! when to start analyzing data
 k_B      = 1E-3                  ! Boltzmann constant
 cfl     = 0.1                   ! CFL number
 prob_type = 0                    ! initprob:0=equilibrium,1=bubble,2=constgrad,3=gaussian,4=2specie-mansol,5=3specie-mansol

 ! Grid size
 prob_lo(1:2) = 0 0
 prob_hi(1:2) = 64 64             ! physical systemsize = (prob_lo-prob_hi)
 n_cells(1:2) = 64 64             ! to set dx = systemsize/n_cells

 diff_coef      = 1.0                   ! max eigenvalue of diffusionmatrix Dbar_bc 
  
 molmass(1:3) = 1.0 0.75 1.25  ! molar mass of n-species

 ! allowable options for this example are
 ! -1 = PERIODIC
 bc_lo(1:2) = -1 -1
 bc_hi(1:2) = -1 -1

 variance_coef_mass = 1E-6        ! parameter to set variance (=1/thickness and =1 ideal) 
  
/

&probin_multispecies
 
 nspecies = 3                     ! number of species
 fraction_tolerance = 1e-14       ! to prevent division by zero 
 start_time  = 1.0                ! start at t=1 to avoid NAN coming from rho_exact at t=0
 !include_temp = .false.          ! right now no temperature equation
 inverse_type = 1                 ! LAPACK inverse type: 1=inverse, 2=pseudo inverse 
 timeinteg_type = 3               ! integrator type: 1=Euler,2=predictor-corrector,3=midpoint,4=RK3
 correct_flux = .true.            ! correct flux to numeric roundoff
 print_error_norms = .true.       ! check L1/L2/Linf norm 
 is_ideal_mixture  = .false.      ! false=Bdag*Gama, true=Bdag 
 is_nonisothermal  = .true.       ! true=include grad(T), false= no grad(T)  
 use_lapack  = .false.            ! false=iterative methods, true=inverse/pseudoinverse 
 rho_init(1,1:3) = 0.2 0.5 0.3      ! inside the circle
 rho_init(2,1:3) = 0.8 0.5 0.7      ! outside the circle
 Dbar(1:3) = 1.0 2.0 2.0       ! SM diffusion constant arranged in lower-triangle
 Dtherm(1:3) = 1.0 1.0 -2.0    ! thermo-diffusion constant (sums to zero)
 H_offdiag(1:3) = -0.003431571 0.111944511 -0.032711064    ! H-matrix SPD off diagonal element
 H_diag(1:3) = 0.962789551 1.080753839 1.060792806       ! H-matrix SPD diagonal element
 T_init(1:2) = 1.0 2.0              ! Upper and lower plate temperature
 
/
